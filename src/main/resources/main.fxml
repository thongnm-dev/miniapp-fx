<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.thongnm.controller.MainController">
    <BorderPane prefHeight="600.0" prefWidth="900.0">
       <top>
          <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #ffffff; -fx-border-color: #dee2e6; -fx-border-width: 0 0 1 0;">
                <ToggleButton fx:id="menuToggleBtn" mnemonicParsing="false" onAction="#onMenuToggle" text="â˜°">
                   <font>
                      <Font size="14.0" />
                   </font>
                </ToggleButton>
                <Label text="My Application">
                   <font>
                      <Font name="System Bold" size="18.0" />
                   </font>
                </Label>
             <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
             </padding>
          </HBox>
       </top>
       <left>
          <VBox fx:id="sideBar" prefWidth="200.0" spacing="5.0"
                style="-fx-background-color: #f8f9fa;
                -fx-border-color: #dee2e6; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.18), 16, 0.25, 0, 6);
                -fx-border-width: 0 1 0 0;" BorderPane.alignment="CENTER">
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onDashboard" style="-fx-background-color: transparent; -fx-alignment: CENTER_LEFT;" text="Dashboard">
                   <padding>
                      <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                   </padding>
                   <font>
                      <Font size="14.0" />
                   </font>
                </Button>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onDelivery" style="-fx-background-color: transparent; -fx-alignment: CENTER_LEFT;" text="Delivery">
                   <padding>
                      <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                   </padding>
                   <font>
                      <Font size="14.0" />
                   </font>
                </Button>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onSettings" style="-fx-background-color: transparent; -fx-alignment: CENTER_LEFT;" text="Settings">
                   <padding>
                      <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                   </padding>
                   <font>
                      <Font size="14.0" />
                   </font>
                </Button>
             <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
             </padding>
          </VBox>
       </left>
       <center>
          <StackPane fx:id="contentArea" style="-fx-background-color: #f0f2f5;" BorderPane.alignment="CENTER">
                <Label text="Content Area" textFill="#888888">
                   <font>
                      <Font size="24.0" />
                   </font>
                </Label>
             <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
             </padding>
          </StackPane>
       </center>
    </BorderPane>
    <fx:include source="loading.fxml" fx:id="loading"/>
</StackPane>
