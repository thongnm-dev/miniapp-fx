<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>
<StackPane fx:id="root" xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="dev.thongnm.controller.MainController">
    <BorderPane style="-fx-padding: 5;">
       <left>
          <BorderPane fx:id="sideBarGroup" styleClass="sidebar" prefWidth="200.0">
              <center>
                  <VBox fx:id="sideBar" BorderPane.alignment="CENTER">
                      <Button styleClass="btn-transparent" text="Dashboard">
                          <graphic>
                              <FontIcon iconLiteral="mdi-home-variant" iconSize="32" />
                          </graphic>
                      </Button>
                      <Button styleClass="btn-transparent" onAction="#onCalendar" text="Lịch Làm Việc">
                          <graphic>
                              <FontIcon iconLiteral="mdi-calendar-today" iconSize="32" />
                          </graphic>
                      </Button>
                      <Button styleClass="btn-transparent" onAction="#onDelivery" text="Delivery">
                          <graphic>
                              <FontIcon iconLiteral="mdi-truck-delivery" iconSize="32" />
                          </graphic>
                      </Button>
                      <Button styleClass="btn-transparent" text="Settings">
                          <graphic>
                              <FontIcon iconLiteral="mdi-settings" iconSize="32" />
                          </graphic>
                      </Button>
                      <padding>
                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                      </padding>
                  </VBox>
              </center>
              <bottom>
                  <VBox styleClass="bg-white" alignment="CENTER" >
                      <Separator/>
                      <Button styleClass="btn-transparent" onAction="#onMenuToggle">
                          <graphic>
                              <FontIcon fx:id="chevronIcon" iconLiteral="mdi-chevron-double-left" iconSize="32"/>
                          </graphic>
                      </Button>
                  </VBox>
              </bottom>
          </BorderPane>
       </left>
       <center>
           <BorderPane>
               <center>
                   <StackPane fx:id="contentArea" BorderPane.alignment="CENTER">
                       <Label text="Content Area" textFill="#888888" />
                   </StackPane>
               </center>
               <bottom>
                   <GridPane>

                   </GridPane>
               </bottom>
               <padding>
                   <Insets left="10" right="10"/>
               </padding>
           </BorderPane>
       </center>
    </BorderPane>
    <fx:include source="loading.fxml" fx:id="loading"/>
</StackPane>
